<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignleActivity">

    <ImageView

        android:id="@+id/single_img"

        android:layout_width="match_parent"
        android:layout_height="250dp"></ImageView>

    <TextView
        android:textColor="#000"
        android:id="@+id/single_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/single_img"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Web Development HTML, CSS, Javascript"
        android:textSize="32sp"></TextView>

    <TextView
        android:id="@+id/single_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/single_title"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Rs.2000"
        android:textColor="#000"
        android:textSize="32dp">

    </TextView>

    <TextView
        android:id="@+id/single_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/single_title"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/single_price"
        android:text="Rs.3000"
        android:textSize="24dp">

    </TextView>
    <Button
        android:id="@+id/buy"
        android:textSize="24dp"
        android:textAllCaps="false"
        android:text="Buy Now"
        android:background="@drawable/button_color"
        android:layout_margin="10dp"
        android:layout_below="@id/single_price"
        android:layout_width="match_parent"
        android:layout_height="60dp"></Button>
</RelativeLayout>