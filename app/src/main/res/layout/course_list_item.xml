<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/course_layout"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:layout_height="130dp">

    <ImageView

        android:scaleType="fitXY"
        android:id="@+id/course_item_image"
        android:layout_width="200dp"
        android:layout_height="match_parent"></ImageView>

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:id="@+id/course_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/course_item_image"
        android:text="TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/course_item_image"
        android:id="@+id/course_item_price"
        android:text="Rs.200"
        android:textSize="24dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/course_item_price"
        android:id="@+id/course_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs.2000"
        android:textSize="18sp" />


</RelativeLayout>